<?xml version="1.0" encoding="UTF-8"?>
<settings xmlns="http://maven.apache.org/SETTINGS/1.0.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/SETTINGS/1.0.0
          http://maven.apache.org/xsd/settings-1.0.0.xsd">
    
    <servers>
        <server>
            <id>central</id>
            <configuration>
                <httpConfiguration>
                    <connectionTimeout>300000</connectionTimeout>
                    <readTimeout>300000</readTimeout>
                </httpConfiguration>
            </configuration>
        </server>
    </servers>

    <mirrors>
        <mirror>
            <id>central</id>
            <name>Maven Central (repo1)</name>
            <url>https://repo1.maven.org/maven2</url>
            <mirrorOf>central</mirrorOf>
        </mirror>
    </mirrors>

    <profiles>
        <profile>
            <id>network-resilience</id>
            <properties>
                <maven.wagon.http.retryHandler.class>standard</maven.wagon.http.retryHandler.class>
                <maven.wagon.http.retryHandler.count>8</maven.wagon.http.retryHandler.count>
                <maven.wagon.http.retryHandler.requestSentEnabled>true</maven.wagon.http.retryHandler.requestSentEnabled>
                <maven.wagon.httpconnectionManager.ttlSeconds>300</maven.wagon.httpconnectionManager.ttlSeconds>
                <maven.wagon.http.pool>false</maven.wagon.http.pool>
            </properties>
        </profile>
    </profiles>

    <activeProfiles>
        <activeProfile>network-resilience</activeProfile>
    </activeProfiles>
</settings>
